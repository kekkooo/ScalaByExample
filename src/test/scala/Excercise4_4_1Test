import org.scalatest._
import Section4.Exercise4_4_1
class Excercise4_4_1Test extends FlatSpec with Matchers {

  val e = new Exercise4_4_1()

  "Squared root of 16 " should " be equal to 4" in{

    assert( e.squaredRoot( 16 ) === 4.0 +- 0.1 )
  }
  it should "be true that squared root of 100000000 is 10000" in {

    assert( e.squaredRoot( 100000000 ) === 10000.0 +- 0.1 )
  }
}
